<h2>Welcome!</h2>
<br />
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">@</div>
  		<%= f.email_field :email, autofocus: true, :class => "input-lg form-control", "placeholder" => "fiscally@responsible.com" %>
  	</div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">PÂ </div>
    <%= f.password_field :password, autocomplete: "off", :class => "input-lg form-control", "placeholder" => "password" %>
  	</div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Log in", :class=> "btn btn-default btn-lg pull-right" %></div>
<% end %>

<%= render "devise/shared/links" %>
