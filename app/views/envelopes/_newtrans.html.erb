<h2>Create Transaction</h2>

<%= form_for [@envelope, @envelope.transactions.build] do |f| %>

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">N </div>
    <%= f.text_field :name, :class => "input-lg form-control", "placeholder" => "expense name"  %>
    </div>
    </div>
  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">$ </div>
    <%= f.text_field :cash, :class => "input-lg form-control", "placeholder" => "cost"  %>
</div>
</div>
  <p>
    <%= f.submit "Create", :class=> "btn btn-info btn-lg pull-right"%>
  </p>
<% end %>
